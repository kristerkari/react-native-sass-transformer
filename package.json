{
  "name": "react-native-sass-transformer",
  "version": "2.0.0",
  "description": "Sass transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/kristerkari/react-native-sass-transformer",
  "scripts": {
    "release": "npmpub",
    "precommit": "lint-staged",
    "test": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "index.js",
    "README.md"
  ],
  "dependencies": {
    "app-root-path": "^2.1.0",
    "css-to-react-native-transform": "^1.8.1",
    "semver": "^5.6.0"
  },
  "peerDependencies": {
    "react-native": ">=0.45.0",
    "sass": "^1.43.2"
  },
  "devDependencies": {
    "eslint": "^7.31.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "npmpub": "^5.0.0",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": 0,
      "semi": [
        2,
        "always"
      ],
      "quotes": [
        2,
        "double"
      ],
      "no-else-return": 2,
      "no-var": 0
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  }
}
